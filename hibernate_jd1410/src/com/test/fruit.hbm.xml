<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.test">
	<class name="Fruit" table="t_fruit1">
		<id name="id" type="long" length="10">
			<generator class="increment"></generator>
		</id>
		<property name="name" type="string" length="20" not-null="true"></property>
		<property name="comments" type="string" length="50" ></property>
		<property name="price" type="integer" length="5" not-null="true"></property>
	</class>
</hibernate-mapping>